<%- include("../partials/header") %>
    
    <!--If i do not name my inputs, the body will be empty!-->
    
    <div class="container">
        <div class="row">
            <h1 id="header">Edit <%=campground.name%></h1>
            
            <form id="puns" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group" >
                    <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value="<%=campground.image%>" placeholder="image URL">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" value="<%=campground.price%>" step="0.01"placeholder="image URL">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value="<%=campground.description%>"placeholder="Description">    
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary" type="submit">Submit!</button>
                </div>
                 <a href="/campgrounds">Go Back</a>
            </form>
        </div>
        <style> 
            #puns{
                width:30%;
                margin:25px auto; 
                
            }
            #header{
                text-align:center;
            }
        </style>
    </div>
<%- include("../partials/footer")%>